
@{
    ViewBag.Title = "sendMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script>
    $(document).ready(function () {
        $('#emailForm').submit(function (e) {
            e.preventDefault();

            var formData = $(this).serialize();
            $.ajax({
                url: '@Url.Action("SendEmail","Home")' ,
                type: 'POST',
                data: formData,
                success: function (response) {
               
                    showSuccessMessage(response);
                },
                error: function (xhr, status, error) {
                    console.log(xhr.responseText);
                    showErrorMessage(xhr.responseText)
                }
            });
        });
    });
</script>


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">



    <h1>Gửi Email</h1>
    <form id="emailForm">
        <label for="toAddress">Địa chỉ Email Người nhận:</label>
        <input type="email" id="toAddress" name="toAddress" required><br>
        <label for="subject">Tiêu đề:</label>
        <input type="text" id="subject" name="subject" required><br>
        <label for="body">Nội dung:</label>
        <textarea id="body" name="body" required></textarea><br>
        <input type="submit" value="Gửi Email">
    </form>




</div>

