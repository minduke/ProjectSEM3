@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .carousel-caption {
        /* CSS cho thẻ <h5> */

        bottom: 90px;
    }

        .carousel-caption.d-none.d-md-block h5 {
            /* CSS cho thẻ <h5> */
            color: ghostwhite;
            font-weight: bold;
            font-size: 22px;
            text-transform: uppercase;
            text-shadow: 5px 5px 10px #00FF00;
        }

        .carousel-caption.d-none.d-md-block p {
            /* CSS cho thẻ <p> */
            color: ghostwhite;
            font-weight: bold;
            font-size: 20px;
            text-shadow: 5px 5px 10px #00FF00;
        }


    .w-100 {
        /* kích thước thẻ slide index home */
        width: 100vw;
        height: 40vh;
        filter: blur(3px);
        background-color: rgba(0, 0, 0, 0.5); /* Màu nền làm mờ */
    }

    .logoBrandCard {
        /* kích thước logo card index home */
        width: 250px;
        height: 200px;
        margin: 2px;
    }
    .titleH1 {
        color: #34495E;
        font-weight: bold;
        text-align: center;
        text-transform: uppercase;
        text-shadow: 5px 5px 10px #00FF00;
    }
    .titleH3 {
        color: #FBFCFC;
        text-align: center;
        text-transform: uppercase;
        text-shadow: 5px 5px 10px #00FF00;
    }
    .titleh3 {
        text-align: center;
        text-transform: uppercase;
        color: #34495E;
        text-shadow: 5px 5px 10px #A569BD;
    }
    .titleF {
        font-style: italic;
        color: #229954;
        background-color: #E5E7E9;
    }
    .cusWD {
        color: #34495E;
        text-transform: uppercase;
        text-shadow: 5px 5px 10px #A569BD;
    }
</style>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"> Home <small></small></h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li class="breadcrumb-item active">About Us</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Main content -->
    <div class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-body row">
                <div class="col-sm-5 text-center d-flex align-items-center justify-content-center">
                    <div class="">
                        <h2>GIVE<strong>-AID</strong></h2>
                        <p class="lead mb-5">
                            123 Testing Ave, Testtown, 9876 NA<br>
                            Phone: +1 234 56789012
                        </p>
                    </div>
                </div>
                <div class="col-sm-7">
                    <h1>My Team</h1>
                    <div class="row">

                        <div class="col-sm-5 mr-3" style="width: 15rem; ">
                            <img class="card-img-top" style="border-radius:50%;" src="@Url.Content("~/Content/Images/Wu.png")" alt="Card image cap" width="100" height="170">
                            <div class="card-body">
                                <h5 class="card-title">Lại Nguyên Vũ</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

                            </div>
                        </div>
                        <div class="col-sm-5 ml-3" style="width: 15rem;">
                            <img class="card-img-top" style="border-radius:50%;"  src="@Url.Content("~/Content/Images/Duke2.png")" alt="Card image cap" width="100" height="170">
                            <div class="card-body">
                                <h5 class="card-title">Lê Minh Đức</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>



        <div class="container">
            <h3 class="titleh3 mt-3 mb-3">Our partner</h3>
            <!-- SLIDE IMAGE -->
            <div id="logo-carousel" class="carousel slide" data-ride="carousel" data-interval="3000">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#logo-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#logo-carousel" data-slide-to="1"></li>
                    <li data-target="#logo-carousel" data-slide-to="2"></li>
                    <!-- Thêm các chỉ số cho từng logo -->
                </ol>

                <!-- Slides -->
                <div class="carousel-inner mt-3 mb-3">
                    <div class="carousel-item active" style="text-align:center;">
                        <img src="~/Content/Images/apple.png" loading="lazy" alt="Logo 1" class="ml-3 mr-3">
                        <img src="~/Content/Images/facebook.png" loading="lazy" class="ml-3 mr-3">
                        <img src="~/Content/Images/youtube.png" loading="lazy" class="ml-3 mr-3">
                    </div>
                    <div class="carousel-item" style="text-align:center;">
                        <img src="~/Content/Images/youtube.png" loading="lazy" class="ml-3 mr-3">
                        <img src="~/Content/Images/facebook.png" loading="lazy" class="ml-3 mr-3">
                        <img src="~/Content/Images/apple.png" alt="Logo 2" loading="lazy" class="ml-3 mr-3">
                    </div>
                    <div class="carousel-item" style="text-align:center;">
                        <img src="~/Content/Images/tiktok.png" loading="lazy" class="ml-3 mr-3">
                        <img src="~/Content/Images/apple.png" alt="Logo 3" class="ml-3 mr-3">
                    </div>
                    <!-- Thêm các slide cho từng logo -->
                </div>

                <!-- Controls -->

            </div>

        </div>

        <!--Cho nay tuyen ngon-->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Url.Content("~/Content/Images/sloganVIP.jpg")" loading="lazy" class="d-block w-100" alt="anh test 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>If you're still breathing, you're alive</h5>
                    <p>So don't forget to breathe</p>
                </div>
            </div>
        </div>
    </div>

    <!-- /.content -->
</div>