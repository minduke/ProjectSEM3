
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<script>
    function doLogin() {
        var json = getFormObj("formLogin");

        $.ajax({
            type: 'POST',
            url: '@Url.Action("Login", "Login")',
            data: json,
            dataType: 'json',
            success: function (response) {
                if (response.result == true) {
                    var url = '@Url.Action("Index", "Home")';
                    open(url, "_self");
                }
                else {
                    showErrorMessage(response.error);
                }
            },
            error: handleException
        });
    }
</script>

<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>Give</b>-AID</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Đăng Nhập</p>

            <!--Load GIF-->
            <div class="modalLoading"></div>


            <form action="javascript:doLogin();" method="post" id="formLogin">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="username" id="username" placeholder="Tài khoản">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Mật khẩu">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <p class="mb-1">
                            <a href="@Url.Action("CreateAcc","Login")">
                              Đăng Ký Mới Tinh
                            </a>
                        </p>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <!-- /.social-auth-links -->



        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->
