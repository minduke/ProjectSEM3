<div class="content-wrapper">

    <div class="card-header">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    @{
                        if (ViewBag.IsEditPost == true)
                        {
                            <div class="col-sm-6">
                                <h1 class="m-0">Edit Detail</h1>
                            </div><!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="@Url.Content("~/Admin")">Admin</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Content("~/Admin/CreateNews")">Posts</a></li>
                                    <li class="breadcrumb-item active">Edit Detail</li>
                                </ol>
                            </div><!-- /.col -->
                        }
                        else
                        {
                            <div class="col-sm-6">
                                <h1 class="m-0">Create News</h1>
                            </div><!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="@Url.Content("~/Admin")">Admin</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Content("~/Admin/CreateNews")">Posts</a></li>
                                    <li class="breadcrumb-item active">Create News</li>
                                </ol>
                            </div><!-- /.col -->
                        }

                    }

                </div><!-- /.row -->
