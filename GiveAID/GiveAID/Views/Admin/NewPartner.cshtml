            </div>

            <div id="createPartner" class="container tab-pane fade table-responsive-md">
                <div class="row mb-2">
                    <!-- form start -->
                    <form id="formPartner" action="javascript:submitPartner();" method="post" enctype="multipart/form-data">
                        <div class="card-body mx-auto">
                            <div class="form-group">
                                <label for="Tiêu Đề">Tên Đối Tác</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Tên mối" required>
                            </div>

                            <div class="form-group">
                                <label for="description">Mô tả về họ</label>
                                <input type="text" class="form-control" id="description" name="description" placeholder="Viết hay thì có bài hay" required>
                            </div>

                            <div class="form-group">
                                <label for="fileBasePartner">Logo cho đối tác</label>


                                <input type="file" class="form-control" id="fileBasePartner" name="fileBasePartner" required onchange="previewImages(event)">
                                <div id="imagesPreview" style="margin-top: 10px;"></div>

                            </div>

                            <div class="form-group">
                                <label for="description">Địa chỉ </label>
                                <input type="text" class="form-control" id="address" name="address" placeholder="Ví dụ: Khu phố đèn tím " required>
                            </div>

                            <div class="form-group">
