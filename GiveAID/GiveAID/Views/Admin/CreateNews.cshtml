
@{
    ViewBag.Title = "CreateNews";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">

    <div class="card-header">
        <h4 class="card-title">Create News</h4>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form id="formTinTuc" action="" method="post">
        <div class="card-body mx-auto">
            <div class="form-group">
                <label for="SoHieuViTriTuyenDung">Số hiệu vị trí tuyển dụng</label>
                <input type="text" class="form-control" id="SoHieuViTriTuyenDung" name="SoHieuViTriTuyenDung" placeholder="Số hiệu vị trí tuyển dụng" required>
            </div>

            <div class="form-group">
                <label for="SoLuongTuyenDung">Số lượng tuyển dụng</label>
                <input type="number" class="form-control" id="SoLuongTuyenDung" name="SoLuongTuyenDung" placeholder="Số lượng tuyển dụng" required>
            </div>

            <div class="form-group">
                <label for="ChucVu">Chức vụ</label>
                <input type="text" class="form-control" id="ChucVu" name="ChucVu" placeholder="Chức vụ" required>
            </div>

            <input type="hidden" id="NgayTao" name="NgayTao" value="" />

            <input type="hidden" name="TrangThai" value="Mở" />
            
            <div class="form-group">
                <label for="TieuDe">Tiêu đề</label>
                <input type="text" class="form-control" id="TieuDe" name="TieuDe" placeholder="Tiêu đề" required>
            </div>
            
            <div class="form-group">
                <label for="content">Mô tả chi tiết</label>
                <input type="text" class="form-control" id="content" placeholder="Mô tả chi tiết" required>
            </div>
            
            <div>
                <input type="hidden" name="MoTa" id="MoTa" />
            </div>
            
            <div class="form-group">
                <label for="NgayDongViTriTuyenDung">Ngày kết thúc</label>
                <input type="date" class="form-control" id="NgayDongViTriTuyenDung" name="NgayDongViTriTuyenDung" required>
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" id="btnSubmit" class="btn btn-primary" value="Save">Lưu</button>
        </div>
    </form>
</div>
<!-- /.card -->
